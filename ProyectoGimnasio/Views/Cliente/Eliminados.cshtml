@using ProyectoGimnasio.Models
@model List<ProyectoGimnasio.Models.ClienteCLS>

<h2>Clientes Eliminados</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha de Ingreso</th>
                <th>Tipo de Plan</th>
                <th>Sexo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IDCLIENTE</td>
                    <td>@item.NOMBRE</td>
                    <td>@item.APELLIDO</td>
                    <td>@item.FECHAINGRESO</td>
                    <td>@item.TIPODEPLAN)</td>
                    <td>
                        @if (item.IDSEXO == 1)
                        {
                            <strong>Femenino</strong>
                        }
                        else
                        {
                            <strong>Masculino</strong>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Restaurar", "Cliente", new { id = item.IDCLIENTE }, FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-primary">Restaurar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay Clientes eliminados.</p>
}




